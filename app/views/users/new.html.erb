<div class="jumbotron center-form">
  <h1 class="display-4">New User</h1>
  <hr class="my-4">
	<% @page_title = "UserAuth | Signup" %>
	<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
		<div class="form-group">
			<label for="exampleInputEmail1">User Name</label>
			<%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username' %>
			<small class="form-text text-muted">We'll never share your details with anyone else.</small>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Password</label>
			<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Password Confirmation</label>
			<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password' %>
		</div>
		 <%= f.submit :Signup, class: 'btn btn-primary' %>
  <% end %>
	  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>